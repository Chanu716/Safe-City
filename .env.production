# Security Configuration for SafeCity

# IMPORTANT: Update these values in production
NODE_ENV=production

# JWT Configuration (REQUIRED - Change in production)
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters_long
JWT_EXPIRE=7d

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/safecity?retryWrites=true&w=majority

# Google Maps API Configuration (REQUIRED)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Configuration (REQUIRED for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Application Configuration
PORT=3000
APP_NAME=SafeCity
APP_URL=https://your-domain.vercel.app

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
BCRYPT_ROUNDS=12

# Session Configuration
COOKIE_SECRET=your_cookie_secret_here
COOKIE_MAX_AGE=604800000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ADMIN_NOTIFICATIONS=true

# Monitoring (Optional)
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Development Only (Remove in production)
# TRUST_PROXY=false